<!-- main container -->
<div class="container mt-5 py-3">

    <!-- main column-->
    <div class="column">

      <!-- hero banner -->
      <section class="hero-banner">
    <div class="container auto-mx main-homepage rounded">
        <div class="row row align-items-center">
            <div class="col-6">
                <h1 class="mt-3">Browse our collection of cocktails & post a recipe of your own!</h1>
                <p class="lead my-5">
                  “Fill with mingled cream and amber,
                  I will drain that glass again.
                  Such hilarious visions clamber
                  Through the chamber of my brain —
                  Quaintest thoughts — queerest fancies
                  Come to life and fade away;
                  What care I how time advances?
                  I am drinking ale today.” -Edgar Allen Poe
                </p>
                <div class="mb-3">
              {{#if loggedIn}}
                <a href="/add-recipe" class="btn btn-outline-secondary btn-lg border bg-light">Add New Recipe</a>
                {{/if}}
            </div>
            </div>
            <div class="col-6" style="overflow-y:scroll">
                    {{#each recipes as |recipe|}}
                  <div> 
                  <div class="card mt-1 border border-2 rounded">
                  <div class=" border rounded">
                    <div> 
                    <h5 class="card-header"><a href="/recipes/{{recipe.id}}">{{recipe.title}}</a></h5>
                    <h6 class="card-body mb-2 text-muted"> {{recipe.description}}</h6>  
                    </div>
                  
                  
                  </div>
                </div>
                {{/each}}
               </div>
  
                 
              </div>
            </div>
            
            
        </div>
    </div>
</section>


  </div>
</div>

